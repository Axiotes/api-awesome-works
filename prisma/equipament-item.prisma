enum EquipamentItemStatus {
  AVAILABLE
  IN_USE
  MAINTENANCE
  DISCARDED
}

model EquipamentItem {
  id                Int                  @id @default(autoincrement())
  serialNumber      String               @db.VarChar(50)
  imei              String               @db.VarChar(20)
  equipamentModelId Int
  employeeId        Int?                 
  status            EquipamentItemStatus @default(AVAILABLE)
  active            Boolean              @default(true)
  createdAt         DateTime             @default(now())
  updatedAt         DateTime?
  deletedAt         DateTime?

  // Relações
  equipamentModel   Equipament           @relation(fields: [equipamentModelId], references: [id])
  employee          Employee?            @relation(fields: [employeeId], references: [id])
}